{
  "name": "@guigou/sc-rollup-ink5",
  "version": "0.0.3-beta43",
  "author": "GuiGou",
  "repository": {
    "type": "git",
    "url": "https://github.com/GuiGou12358/sc-rollup.git",
    "directory": "sc-rollup-api/packages/ink5"
  },
  "license": "ISC",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/esm/index.mjs",
        "require": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "module": "./dist/esm/index.mjs",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./ink-client": {
      "node": {
        "import": "./dist/esm/index.mjs",
        "require": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "module": "./dist/esm/ink-client.mjs",
      "import": "./dist/esm/ink-client.mjs",
      "require": "./dist/ink-client.js",
      "default": "./dist/ink-client.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/esm/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build-core": "tsc --noEmit && rollup -c ../../rollup.config.js",
    "build": "pnpm build-core",
    "test": "vitest --no-isolate",
    "lint": "prettier --check README.md \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format": "prettier --write README.md \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepack": "pnpm run clean && pnpm run build",
    "release": "pnpm publish --access public --tag tag0.0.3-beta43 --no-git-checks",
    "gen-shibuya-rpc": "pnpm exec papi add -w wss://rpc.shibuya.astar.network shibuya",
    "gen-contract-metadata": "pnpm exec papi ink add ./metadata/ink_client.json"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "vitest": "^3.0.9",
    "dotenv": "^16.4.7"
  },
  "dependencies": {
    "@guigou/sc-rollup-core": "^0.0.4-beta1",
    "polkadot-api": "^1.9.7",
    "@guigou/sc-rollup-ink5-descriptors": "^0.1.0-beta1",
    "@polkadot-api/sdk-ink": "0.0.1-1",
    "@polkadot-labs/hdkd": "^0.0.13",
    "@polkadot-labs/hdkd-helpers": "^0.0.13",
    "@polkadot/util": "^13.4.4",
    "@polkadot/util-crypto": "^13.4.4",
    "@polkadot/keyring": "^13.4.4"
  }
}
