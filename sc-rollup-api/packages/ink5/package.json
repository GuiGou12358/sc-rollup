{
  "name": "@guigou/sc-rollup-ink5",
  "version": "0.0.2-beta6",
  "author": "GuiGou",
  "repository": {
    "type": "git",
    "url": "https://github.com/GuiGou12358/sc-rollup.git",
    "directory": "sc-rollup-api/packages/ink5"
  },
  "license": "ISC",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "ink-client": {
      "import": "./dist/ink-client.d.js",
      "require": "./dist/ink-client.js",
      "types": "./dist/ink-client.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build-core": "tsc --noEmit",
    "build": "pnpm build-core",
    "test": "vitest --no-isolate",
    "lint": "prettier --check README.md \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format": "prettier --write README.md \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepack": "pnpm run build",
    "gen-shibuya-rpc": "pnpm exec papi add -w wss://rpc.shibuya.astar.network shibuya",
    "gen-contract-metadata": "pnpm exec papi ink add ./metadata/ink_client.json"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "vitest": "^3.0.9",
    "dotenv": "^16.4.7"
  },
  "dependencies": {
    "@guigou/sc-rollup-core": "^0.0.2-beta",
    "polkadot-api": "^1.9.7",
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot-api/sdk-ink": "0.0.1-1",
    "@polkadot-labs/hdkd": "^0.0.13",
    "@polkadot-labs/hdkd-helpers": "^0.0.13",
    "@polkadot/keyring": "^13.4.3",
    "@polkadot/util": "^13.4.3",
    "scale-ts": "^1.6.1"
  }
}
