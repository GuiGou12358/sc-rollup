    "format": "prettier --write README.md \"src/**/*.{js,jsx,ts,tsx,json,md}\" \"tests/**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepack": "pnpm run build",
    "release": "pnpm publish --access public --tag tag0.1.1-beta1"
  },
  "dependencies": {
    "@guigou/sc-rollup-core": "^0.1.0-beta1",
    "ethers": "^6.15.0"
