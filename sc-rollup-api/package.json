{
  "name": "@guigou/sc-rollup-api",
  "version": "0.0.2-beta",
  "author": "GuiGou",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/GuiGou12358/sc-rollup.git",
    "directory": "sc-rollup-api"
  },
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "clean": "pnpm -r clean",
    "build-core": "pnpm -r build-core",
    "build": "pnpm clean && pnpm build-core",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test run",
    "release": "pnpm -r test run"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all",
    "jsdocExperimentalFormatCommentsWithoutTags": true,
    "plugins": [
      "@homer0/prettier-plugin-jsdoc"
    ]
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.2.0",
    "@homer0/prettier-plugin-jsdoc": "^10.0.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@vitest/coverage-v8": "^3.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rollup": "^4.39.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  }
}
